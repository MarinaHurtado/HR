import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

class Data {
    
    int d;
    Data next;

    public Data(int d) {
        this.d = d;
        this.next = null;
    }
    
    public Data(int d, Data n) {
        this.d = d;
        this.next = n;
    }
    
}

class Pair{
    int a;
    int b;
    Pair next;

    public Pair(int a, int b, Pair n) {
        this.a = a;
        this.b = b;
        next=n;
    }
    
}

public class Solution {

    public static void insertData(Data dataHead, int d){
        while(dataHead.next!=null && dataHead.d<d){
            dataHead = dataHead.next;
        }
        Data aux = new Data(d,dataHead.next);
        dataHead.next=aux;
    }
    
    public static Pair minDiff(Data data){
        int dif=Math.abs(data.d - data.next.d);
        Pair pairHead=new Pair(data.d, data.next.d, null);
        while(data.next!=null){
            if(Math.abs(data.d - data.next.d)<dif){
                dif=Math.abs(data.d - data.next.d);
                pairHead=new Pair(data.d, data.next.d, null);
            }
            else if(Math.abs(data.d - data.next.d)==dif){
               Pair newPair = new Pair(data.d, data.next.d, null);
               Pair aux= pairHead;
               while(aux.next!=null)
                   aux=aux.next;
               aux.next=newPair;
            }
        }
        return pairHead;
    }
    
    public static void main(String[] args) {
       Scanner in = new Scanner(System.in);
       int T = in.nextInt();
       Data dataHead = new Data(in.nextInt());
       for(int i=1; i<T ;i++){
            insertData(dataHead, in.nextInt());
       }
       
       Pair pairs = minDiff(dataHead);
       System.out.println(pairs.a + " " + pairs.b + " ");
        while (pairs.next != null){
            pairs = pairs.next;
            System.out.println(pairs.a + " " + pairs.b + " ");
        }
    }
    
}
